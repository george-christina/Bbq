
<div class="container">
    <div class="row justify-content-between">
        <div class="col-4">
            <h1 class="text-primary" style="width:700px;"><u>@ViewBag.show.EventName</u></h1>
        </div>
        <h5 class="col-6 text-secondary mt-3">Date: @ViewBag.show.Date.ToLongDateString() at @ViewBag.show.Date.ToLongTimeString()</h5>
        <div class="btn-group" style="height:40px;">
            <a href="/success" class="btn btn-primary active">Dashboard</a>
            <a href="/logout" class="btn btn-primary">Logout</a>
        </div>
    </div>
</div>
<hr>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="container">
                <div class="row">
                    <div class="col-7">
                        <h3>Guests:</h3>
                    </div>
                    <div class="col-5">
                        <h5 class="mt-2">Party Total: @ViewBag.PartyTotal</h5>
                    </div>
                </div>
            </div>
            <table class="table table-dark table-striped" style="width:500px;">
                <thead>
                    <tr>
                        <th scope="col">Rsvp'er</th>
                        <th scope="col">Dish</th>
                        <th scope="col">No. Guests Bringing</th>
                    </tr>
                </thead>
                @foreach(Rsvp r in ViewBag.show.GuestList)
                {
                    <tbody>
                        <tr>
                            <td>@r.Guest.FirstName @r.Guest.LastName</td> 
                            <td>@r.Dish</td>
                            <td>@r.TotalGuests </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        <div class="col">
            <h3 class="mx-auto">Rsvp Below:</h3>
            <div class="col">
                <div class="container">
                    <partial name="_UpdateRsvp"/>
                </div>
            </div>
        </div>
    </div>